<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PS27765_NguyenNgocChien_SD18317</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PS27765_NguyenNgocChien_SD18317.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
</head>
<body>
    <header class="">
        <nav class="navbar navbar-expand-sm navbar-dark">
            <div class="container">
                <a class="navbar-brand fw-bolder text-dark" asp-controller="" asp-action="">SAMSAM</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                    <span class="navbar-toggler-icon"><i class="bi bi-list-task text-primary-emphasis"></i></span>
                </button>
                <div class="collapse navbar-collapse" id="collapsibleNavbar">
                    <div>
                        <div>
                            @{
                                var userId = User.Claims.FirstOrDefault(c => c.Type == "UserId")?.Value;
                            }
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link text-dark fs-6" asp-controller="Home" asp-action="Index"><i class="bi bi-house fs-5"></i> Trang chủ</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark fs-6" asp-controller="Cart" asp-action="Index" asp-route-userId="@userId"><i class="bi bi-cart fs-5"></i> Giỏ hàng</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark fs-6" asp-controller="Home" asp-action="Privacy"><i class="bi bi-shield-check fs-5"></i> Chính sách</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark fs-6" asp-controller="Home" asp-action="Introduce"><i class="bi bi-amd fs-5"></i> Giới thiệu</a>
                                </li>
                            </ul>
                        </div>
                        
                    </div>
                </div>
                <div class="text-end">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="nav-link text-dark fs-6 text-decoration-none" asp-route-id="@userId" asp-controller="Auth" asp-action="Profile"><i class="bi bi-person fs-5"></i> @User.Identity.Name</a>
                        <a class="nav-link text-dark fs-6 text-decoration-none ms-4" asp-controller="Auth" asp-action="Logout"><i class="bi bi-box-arrow-right fs-5"></i> Đăng xuất</a>
                    }
                    else
                    {
                        <a class="nav-link text-dark fs-6 text-decoration-none" asp-controller="Auth" asp-action="Login"><i class="bi bi-person fs-5"></i>Tài khoản</a>
                    }
                </div>
        </nav>
    </header>
    <div class="bg-body-secondary">
        <div class="">
            <main role="main" class="pb-3">
                <partial name="_Notification" />
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="footer text-muted">
        <div class="container p-4">
            &copy; 2024 - 05_PS27765_NguyenNgocChien_SD18317 - 0937806350 - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script src="https://kit.fontawesome.com/0d6fe42d10.js" crossorigin="anonymous"></script>
    <script>
        AOS.init();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
